<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="oval">
            <gradient

                android:angle="45"
                android:startColor="#85FFF1"
                android:centerColor="@color/purple_700"
                android:centerX="10"
                android:endColor="#000"
                android:type="linear"
                />

            <size android:width="200dp"
                android:height="200dp"/>

        </shape>

    </item>

    <item
        android:bottom="17dp"
        android:left="17dp"
        android:right="17dp"
        android:top="17dp">
        <shape
            android:shape="oval">
            <solid android:color="#efeeee"/>

        </shape>


    </item>

</layer-list>